{
  "name": "redzone",
  "version": "1.0.0",
  "description": "A thrilling browser-based tower defense game where you defend the Red Zone against endless waves of enemies with the help of AI-powered animal companions.",
  "main": "electron.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "game",
    "tower-defense",
    "survival",
    "browser-game",
    "electron",
    "html5",
    "javascript"
  ],
  "author": {
    "name": "Fabio Votta",
    "email": "fabio@example.com",
    "url": "https://github.com/fabiovotta"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.fabiovotta.redzone",
    "productName": "RED ZONE",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "electron.js",
      "assets/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.games"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Game"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "title": "RED ZONE Installer",
      "icon": "assets/icon.icns"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fabiovotta/redzone.git"
  },
  "bugs": {
    "url": "https://github.com/fabiovotta/redzone/issues"
  },
  "homepage": "https://github.com/fabiovotta/redzone#readme"
}
